platform :ios, '8.0'
use_frameworks!

target 'ModelBenchmark' do

# Objective-C
pod 'FastEasyMapping'
pod 'JSONModel'
pod 'Mantle'
pod 'MJExtension'
pod 'YYModel', :path => '../YYModel.podspec'

# Swift
pod 'Argo'
pod 'Gloss'
pod 'HandyJSON'
pod 'ObjectMapper'
pod 'SwiftyJSON'

# Generator
# https://github.com/Ahmed-Ali/JSONExport
# https://github.com/nixzhu/Coolie
# https://github.com/johnlui/JSONNeverDie

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = "13.0"
      config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
      if (config.build_settings['SWIFT_VERSION']&.to_f || 0) < 5
        config.build_settings['SWIFT_VERSION'] = '5'
      end
    end
  end
end

